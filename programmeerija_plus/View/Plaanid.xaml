<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="programmeerija_plus.View.Plaanid">
    <StackLayout BackgroundColor="SkyBlue">
        <Label 
            Text="Plaanid" 
            BackgroundColor="MidnightBlue" 
            TextColor="White"
            Padding="5"
            FontSize="20"
            />
        <ListView 
            x:Name="plaanList" 
            ItemsSource="{Binding}" 
            ItemSelected="plaanList_ItemSelected"
            RowHeight="120"
            >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout 
                                Orientation="Horizontal"
                                BackgroundColor="MidnightBlue"
                                Margin="2"
                                x:Name="layout"
                                >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Label Grid.Column="0"
                                           Grid.Row="0"
                                        Text="{Binding Title}" 
                                        FontSize="24"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="0"
                                           Grid.Row="1"
                                        Text="Tegevused: " 
                                        FontSize="16"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="1"
                                           Grid.Row="1"
                                        Text="{Binding Tegevused}" 
                                        FontSize="14"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="0"
                                           Grid.Row="2"
                                        Text="Alates: " 
                                        FontSize="16"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="1"
                                           Grid.Row="2"
                                        Text="{Binding Alates}" 
                                        FontSize="14"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="0"
                                           Grid.Row="3"
                                        Text="Kuni: " 
                                        FontSize="16"
                                        TextColor="White"
                                        />
                                    <Label Grid.Column="1"
                                           Grid.Row="3"
                                        Text="{Binding Kuni}" 
                                        FontSize="14"
                                        TextColor="White"
                                        />
                                </Grid>


                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>