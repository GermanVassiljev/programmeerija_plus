<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="programmeerija_plus.View.Plaan">
    <StackLayout>
        <Label Text="Pealkiri"/>
        <Entry Text="{Binding Title}"/>
        <Label Text="Tegevused"/>
        <Entry Text="{Binding Tegevused}"/>
        <Label Text="Fail"/>
        <Entry Text="{Binding Fail}"/>
        <Label Text="Kuni"/>
        <DatePicker/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Salvesta" Clicked="SalvestaPlaan"/>
            <Button Text="Kustuta" Clicked="KustutaPlaan"/>
            <Button Text="Sulge" Clicked="Sulge"/>
        </StackLayout>
    </StackLayout>
</ContentPage>